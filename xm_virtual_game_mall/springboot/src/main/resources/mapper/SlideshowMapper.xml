<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.mapper.SlideshowMapper">

    <select id="selectAll" resultType="com.example.entity.Slideshow">
        select slideshow.*, virtual_game.name as virtual_gameName  from `slideshow`
        left join virtual_game on slideshow.virtual_game_id = virtual_game.id
        <where>
            <if test="virtual_gameName != null"> and virtual_game.name like concat('%', #{virtual_gameName}, '%')</if>
        </where>
        order by slideshow.id asc
    </select>

    <delete id="deleteById">
        delete from `slideshow`
        where id = #{id}
    </delete>

    <insert id="insert" parameterType="com.example.entity.Slideshow" useGeneratedKeys="true">
        insert into `slideshow`
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">id,</if>
            <if test="virtual_gameId != null">virtual_game_id,</if>
            <if test="img != null">img,</if>
        </trim>
        values
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">#{id},</if>
            <if test="virtual_gameId != null">#{virtual_gameId},</if>
            <if test="img != null">#{img},</if>
        </trim>
    </insert>

    <update id="updateById" parameterType="com.example.entity.Slideshow">
        update `slideshow`
        <set>
            <if test="id != null">
                id = #{id},
            </if>
            <if test="virtual_gameId != null">
                virtual_game_id = #{virtual_gameId},
            </if>
            <if test="img != null">
                img = #{img},
            </if>
        </set>
        where id = #{id}
    </update>

</mapper>