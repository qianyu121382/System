<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.mapper.VirtualGameOrdersMapper">

    <select id="selectAll" resultType="com.example.entity.VirtualGameOrders">
        select virtualGame_orders.*, user.name as userName, virtualGame_shop.name as shopName from `virtualGame_orders`
        left join user on virtualGame_orders.user_id = user.id
        left join virtualGame_shop on virtualGame_orders.shop_id = virtualGame_shop.id
        <where>
            <if test="orderNo != null"> and virtualGame_orders.order_no like concat('%', #{orderNo}, '%')</if>
            <if test="virtualGameName != null"> and virtualGame_orders.virtualGame_name like concat('%', #{virtualGameName}, '%')</if>
            <if test="userId != null"> and virtualGame_orders.user_id = #{userId}</if>
            <if test="shopId != null"> and virtualGame_orders.shop_id = #{shopId}</if>
            <if test="status != null"> and virtualGame_orders.status = #{status}</if>
        </where>
        order by virtualGame_orders.id desc
    </select>

    <delete id="deleteById">
        delete from `virtualGame_orders`
        where id = #{id}
    </delete>

    <insert id="insert" parameterType="com.example.entity.VirtualGameOrders" useGeneratedKeys="true">
        insert into `virtualGame_orders`
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">id,</if>
            <if test="orderNo != null">order_no,</if>
            <if test="userId != null">user_id,</if>
            <if test="shopId != null">shop_id,</if>
            <if test="virtualGameId != null">virtualGame_id,</if>
            <if test="virtualGameName != null">virtualGame_name,</if>
            <if test="virtualGameImg != null">virtualGame_img,</if>
            <if test="price != null">price,</if>
            <if test="pickupUser != null">pickup_user,</if>
            <if test="pickupAddress != null">pickup_address,</if>
            <if test="pickupPhone != null">pickup_phone,</if>
            <if test="status != null">status,</if>
            <if test="time != null">time,</if>
        </trim>
        values
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">#{id},</if>
            <if test="orderNo != null">#{orderNo},</if>
            <if test="userId != null">#{userId},</if>
            <if test="shopId != null">#{shopId},</if>
            <if test="virtualGameId != null">#{virtualGameId},</if>
            <if test="virtualGameName != null">#{virtualGameName},</if>
            <if test="virtualGameImg != null">#{virtualGameImg},</if>
            <if test="price != null">#{price},</if>
            <if test="pickupUser != null">#{pickupUser},</if>
            <if test="pickupAddress != null">#{pickupAddress},</if>
            <if test="pickupPhone != null">#{pickupPhone},</if>
            <if test="status != null">#{status},</if>
            <if test="time != null">#{time},</if>
        </trim>

    </insert>

    <update id="updateById" parameterType="com.example.entity.VirtualGameOrders">
        update `virtualGame_orders`
        <set>
            <if test="id != null">
                id = #{id},
            </if>
            <if test="orderNo != null">
                order_no = #{orderNo},
            </if>
            <if test="userId != null">
                user_id = #{userId},
            </if>
            <if test="shopId != null">
                shop_id = #{shopId},
            </if>
            <if test="virtualGameId != null">
                virtualGame_id = #{virtualGameId},
            </if>
            <if test="virtualGameName != null">
                virtualGame_name = #{virtualGameName},
            </if>
            <if test="virtualGameImg != null">
                virtualGame_img = #{virtualGameImg},
            </if>
            <if test="price != null">
                price = #{price},
            </if>
            <if test="pickupUser != null">
                pickup_user = #{pickupUser},
            </if>
            <if test="pickupAddress != null">
                pickup_address = #{pickupAddress},
            </if>
            <if test="pickupPhone != null">
                pickup_phone = #{pickupPhone},
            </if>
            <if test="status != null">
                status = #{status},
            </if>
            <if test="time != null">
                time = #{time},
            </if>
        </set>
        where id = #{id}

    </update>

</mapper>