<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.mapper.ForumMapper">

    <select id="selectAll" resultType="com.example.entity.Forum">
        select forum.*, user.name as userName, user.avatar as userAvatar from `forum`
        left join user on forum.user_id = user.id
        <where>
            <if test="title != null"> and forum.title like concat('%', #{title}, '%')</if>
            <if test="status != null"> and forum.status = #{status}</if>
            <if test="userId != null and flag == null"> and forum.user_id = #{userId}</if>
        </where>
        order by forum.id desc
    </select>

    <delete id="deleteById">
        delete from `forum`
        where id = #{id}
    </delete>

    <insert id="insert" parameterType="com.example.entity.Forum" useGeneratedKeys="true">
        insert into `forum`
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">id,</if>
            <if test="userId != null">user_id,</if>
            <if test="title != null">title,</if>
            <if test="descr != null">descr,</if>
            <if test="content != null">content,</if>
            <if test="img != null">img,</if>
            <if test="time != null">time,</if>
            <if test="viewCount != null">view_count,</if>
            <if test="status != null">status,</if>
        </trim>
        values
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">#{id},</if>
            <if test="userId != null">#{userId},</if>
            <if test="title != null">#{title},</if>
            <if test="descr != null">#{descr},</if>
            <if test="content != null">#{content},</if>
            <if test="img != null">#{img},</if>
            <if test="time != null">#{time},</if>
            <if test="viewCount != null">#{viewCount},</if>
            <if test="status != null">#{status},</if>
        </trim>
    </insert>

    <update id="updateById" parameterType="com.example.entity.Forum">
        update `forum`
        <set>
            <if test="id != null">
                id = #{id},
            </if>
            <if test="userId != null">
                user_id = #{userId},
            </if>
            <if test="title != null">
                title = #{title},
            </if>
            <if test="descr != null">
                descr = #{descr},
            </if>
            <if test="content != null">
                content = #{content},
            </if>
            <if test="img != null">
                img = #{img},
            </if>
            <if test="time != null">
                time = #{time},
            </if>
            <if test="viewCount != null">
                view_count = #{viewCount},
            </if>
            <if test="status != null">
                status = #{status},
            </if>
        </set>
        where id = #{id}
    </update>

</mapper>